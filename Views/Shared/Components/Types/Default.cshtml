@{
}
@model IEnumerable<string>
<!--Create route home passing in default pagenum and booktype for url params-->
<div class="d-grid gap-2">
    <a asp-controller="Home" asp-action="Index" asp-route-bookType="" asp-route-pageNum="1" class="btn btn-outline-secondary">Home</a>

    <!--Create route to each category-->
    @foreach (string t in Model){
        <div class="mt-1">
            <a asp-controller="Home" asp-action="Index" asp-route-bookType="@t" asp-route-pageNum="1" class="btn @(ViewBag.SelectedType == t ? "btn-primary" : "btn-outline-secondary")">@t</a>
    </div>   
    }
</div>